{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowS3TerraformBackendAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:GetBucketVersioning",
        "s3:HeadObject",
        "s3:ListBucketMultipartUploads",
        "s3:ListMultipartUploadParts",
        "s3:AbortMultipartUpload"
      ],
      "Resource": [
        "arn:aws:s3:::mlapi-terraform-state",
        "arn:aws:s3:::mlapi-terraform-state/*"
      ]
    }
  ]
}
